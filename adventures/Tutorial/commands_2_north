<scenario>
    <title>North path</title> 

    <scenariop>'You decide to go north. After walking for some minutes, you arrive at a river. The water is very clear and there is a nice breeze. It's a pity you can't stay here, because you must go back and explore the other paths.'</scenariop>

    <action input="default" type="text" content="Time to GO BACK"></action>

    <action input="player" type="jump" content="commands_2">
        <command>go back</command>
    </action>

    <action input="player" type="text" content="Do you really think this is the time to be laying around?">
        <command>sit down</command>
        <command>lay down</command>
        <command>sit</command>
        <command>sleep</command>
    </action>
</scenario>
