        <command>volver atrás</command>
    </action>

    <action input="player" type="text" content="¿Te parece un buen momento para estar ahí tirado?">
        <command>sentarse</command>
        <command>tumbarse</command>
        <command>dormir</command>
    </action>

    <action input="player" type="text" content="¡¿Estás mal de la cabeza?!">
        <command>saltar</command>
        <command>saltar por acantilado</command>
        <command>tirarse</command>
        <command>tirarse por acantilado</command>
    </action>
